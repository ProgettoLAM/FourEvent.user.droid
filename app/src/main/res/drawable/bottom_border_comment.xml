        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="line" >
            <padding android:bottom="25dp" />
            <stroke
            android:width="2dp"
            android:color="@color/colorAccent" />
        </shape>
    </item>
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="line" >
            <padding android:bottom="25dp" />
            <stroke
                android:width="1dp"
                android:color="#eee" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="8"
            android:orientation="horizontal"
            android:layout_below="@id/appbar">


            <Button
                android:id="@+id/btn_party"
                android:width="120dp"
                android:height="110dp"
                android:text="Party"
                android:tag="0"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>
            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Concerti"
                android:tag="1"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>
            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Teatro"
                android:tag="2"
                android:layout_row="1"
                android:layout_column="3"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Cibo/bevande"
                android:tag="3"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>
            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Arte"
                android:tag="4"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>
            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Letteratura"
                android:tag="5"
                android:layout_row="2"
                android:layout_column="3"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Sport"
                android:tag="6"
                android:layout_row="3"
                android:layout_column="1"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>
            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Tecnologie"
                android:tag="7"
                android:layout_row="3"
                android:layout_column="2"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>
            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Cinema"
                android:tag="8"
                android:layout_row="3"
                android:layout_column="3"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Festival"
                android:tag="9"
                android:layout_row="4"
                android:layout_column="1"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Shopping"
                android:tag="10"
                android:layout_row="4"
                android:layout_column="2"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Fotografia"
                android:tag="11"
                android:layout_row="4"
                android:layout_column="3"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Videogiochi"
                android:layout_row="5"
                android:layout_column="1"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="No profit"
                android:tag="12"
                android:layout_row="5"
                android:layout_column="2"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Business"
                android:tag="13"
                android:layout_row="5"
                android:layout_column="3"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Marketing"
                android:tag="15"
                android:layout_row="6"
                android:layout_column="1"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Natura"
                android:tag="16"
                android:layout_row="6"
                android:layout_column="2"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="110dp"
                android:text="Viaggi"
                android:tag="17"
                android:layout_row="6"
                android:layout_column="3"
                android:background="@drawable/button_selected"
                android:onClick="selectedButton"/>

        </GridLayout>

    </ScrollView>

    </android.support.design.widget.CoordinatorLayout>



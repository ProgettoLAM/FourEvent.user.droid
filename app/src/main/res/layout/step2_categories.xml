<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="7"
        android:orientation="horizontal"
        android:background="#fff">

            <TextView
                android:id="@+id/title_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Scegli le categorie di interesse"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="20dp"
                android:layout_marginLeft="35dp"
                android:layout_columnSpan="3"
                android:layout_gravity="fill_horizontal"
                android:gravity="fill" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#eee"
                android:layout_columnSpan="3"
                android:layout_gravity="fill_horizontal"
                />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/musica"
                android:tag="0"
                android:textColor="@color/button_categories_text"
                android:onClick="selectedButton"
                android:background="#fff"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/viaggi"
                android:tag="1"
                android:textColor="@color/button_categories_text"
                android:background="#fff"
                android:onClick="selectedButton"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/tecnologia"
                android:tag="2"
                android:textColor="@color/button_categories_text"
                android:background="#fff"
                android:onClick="selectedButton" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/cibo"
                android:tag="3"
                android:textColor="@color/button_categories_text"
                android:background="#fff"
                android:onClick="selectedButton"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/arte"
                android:tag="4"
                android:textColor="@color/button_categories_text"
                android:background="#fff"
                android:onClick="selectedButton"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/marketing"
                android:tag="5"
                android:textColor="@color/button_categories_text"
                android:background="#fff"
                android:onClick="selectedButton"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/natura"
                android:tag="6"
                android:textColor="@color/button_categories_text"
                android:background="#fff"
                android:onClick="selectedButton"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/sport"
                android:tag="7"
                android:textColor="@color/button_categories_text"
                android:background="#fff"
                android:onClick="selectedButton"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/fotografia"
                android:tag="8"
                android:textColor="@color/button_categories_text"
                android:background="#fff"
                android:onClick="selectedButton"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/moda"
                android:tag="9"
                android:textColor="@color/button_categories_text"
                android:background="#fff"
                android:onClick="selectedButton"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/lettura"
                android:tag="10"
                android:textColor="@color/button_categories_text"
                android:background="#fff"
                android:onClick="selectedButton"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/videogiochi"
                android:tag="11"
                android:textColor="@color/button_categories_text"
                android:background="#fff"
                android:onClick="selectedButton"/>

        </GridLayout>

</ScrollView>




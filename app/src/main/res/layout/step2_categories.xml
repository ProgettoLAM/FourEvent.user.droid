<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="6"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark">

                <TextView
                    android:id="@+id/title_categories"
                    android:layout_width="257dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:layout_row="0"
                    android:layout_columnSpan="3"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Scegli le categorie di interesse"
                    android:textColor="#FF9800"
                    android:layout_column="1" />


                <Button
                        android:id="@+id/btn_party"
                        android:width="120dp"
                        android:height="105dp"
                        android:text="Musica"
                        android:textColor="#fff"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:background="@drawable/button_selected"
                        android:onClick="selectedButton"/>
                    <Button
                        android:width="120dp"
                        android:height="105dp"
                        android:text="Viaggi"
                        android:textColor="#fff"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:background="@drawable/button_selected"
                        android:onClick="selectedButton"/>
                    <Button
                        android:width="120dp"
                        android:height="105dp"
                        android:text="Natura"
                        android:textColor="#fff"
                        android:layout_row="2"
                        android:layout_column="3"
                        android:background="@drawable/button_selected"
                        android:onClick="selectedButton"/>

                    <Button
                        android:width="120dp"
                        android:height="105dp"
                        android:text="Cibo/bevande"
                        android:textColor="#fff"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:background="@drawable/button_selected"
                        android:onClick="selectedButton"/>
                    <Button
                        android:width="120dp"
                        android:height="105dp"
                        android:text="Arte"
                        android:textColor="#fff"
                        android:layout_row="3"
                        android:layout_column="2"
                        android:background="@drawable/button_selected"
                        android:onClick="selectedButton"/>
                    <Button
                        android:width="120dp"
                        android:height="105dp"
                        android:text="Marketing"
                        android:textColor="#fff"
                        android:layout_row="3"
                        android:layout_column="3"
                        android:background="@drawable/button_selected"
                        android:onClick="selectedButton"/>

                    <Button
                        android:width="120dp"
                        android:height="105dp"
                        android:text="Sport"
                        android:textColor="#fff"
                        android:layout_row="4"
                        android:layout_column="1"
                        android:background="@drawable/button_selected"
                        android:onClick="selectedButton"/>
                    <Button
                        android:width="120dp"
                        android:height="105dp"
                        android:text="Tecnologia"
                        android:textColor="#fff"
                        android:layout_row="4"
                        android:layout_column="2"
                        android:background="@drawable/button_selected"
                        android:onClick="selectedButton"/>
                    <Button
                        android:width="120dp"
                        android:height="105dp"
                        android:text="Letteratura"
                        android:textColor="#fff"
                        android:layout_row="4"
                        android:layout_column="3"
                        android:background="@drawable/button_selected"
                        android:onClick="selectedButton"/>

                    <Button
                        android:width="120dp"
                        android:height="105dp"
                        android:text="Moda"
                        android:textColor="#fff"
                        android:layout_row="5"
                        android:layout_column="1"
                        android:background="@drawable/button_selected"
                        android:onClick="selectedButton"/>

                <Button
                        android:width="120dp"
                        android:height="105dp"
                        android:text="Fotografia"
                        android:textColor="#fff"
                        android:layout_row="5"
                        android:layout_column="2"
                        android:background="@drawable/button_selected"
                        android:onClick="selectedButton"/>

                    <Button
                        android:width="120dp"
                        android:height="105dp"
                        android:text="Videogiochi"
                        android:textColor="#fff"
                        android:layout_row="5"
                        android:layout_column="3"
                        android:background="@drawable/button_selected"
                        android:onClick="selectedButton"/>

        </GridLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>



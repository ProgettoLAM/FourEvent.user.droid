<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/header_categories"
            android:textColor="@color/darkerText"
            android:gravity="center"
            android:layout_margin="20dp"/>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="*">

            <TableRow
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:height="@dimen/button_grid_height"
                    android:text="@string/musica"
                    android:tag="0"
                    android:textColor="@color/button_categories_text"
                    android:background="#fff"
                    android:onClick="selectedButton"/>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_height="@dimen/button_grid_height"
                    android:text="@string/viaggi"
                    android:tag="1"
                    android:textColor="@color/button_categories_text"
                    android:background="#fff"
                    android:onClick="selectedButton"/>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_height="@dimen/button_grid_height"
                    android:text="@string/tecnologia"
                    android:tag="2"
                    android:textColor="@color/button_categories_text"
                    android:background="#fff"
                    android:onClick="selectedButton" />

            </TableRow>

            <TableRow
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_height="@dimen/button_grid_height"
                    android:text="@string/cibo"
                    android:tag="3"
                    android:textColor="@color/button_categories_text"
                    android:background="#fff"
                    android:onClick="selectedButton"/>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_height="@dimen/button_grid_height"
                    android:text="@string/arte"
                    android:tag="4"
                    android:textColor="@color/button_categories_text"
                    android:background="#fff"
                    android:onClick="selectedButton"/>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_height="@dimen/button_grid_height"
                    android:text="@string/marketing"
                    android:tag="5"
                    android:textColor="@color/button_categories_text"
                    android:background="#fff"
                    android:onClick="selectedButton"/>
            </TableRow>

            <TableRow
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_height="@dimen/button_grid_height"
                    android:text="@string/natura"
                    android:tag="6"
                    android:textColor="@color/button_categories_text"
                    android:background="#fff"
                    android:onClick="selectedButton"/>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_height="@dimen/button_grid_height"
                    android:text="@string/sport"
                    android:tag="7"
                    android:textColor="@color/button_categories_text"
                    android:background="#fff"
                    android:onClick="selectedButton"/>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_height="@dimen/button_grid_height"
                    android:text="@string/fotografia"
                    android:tag="8"
                    android:textColor="@color/button_categories_text"
                    android:background="#fff"
                    android:onClick="selectedButton"/>

            </TableRow>

            <TableRow
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_height="@dimen/button_grid_height"
                    android:text="@string/moda"
                    android:tag="9"
                    android:textColor="@color/button_categories_text"
                    android:background="#fff"
                    android:onClick="selectedButton"/>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_height="@dimen/button_grid_height"
                    android:text="@string/lettura"
                    android:tag="10"
                    android:textColor="@color/button_categories_text"
                    android:background="#fff"
                    android:onClick="selectedButton"/>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_height="@dimen/button_grid_height"
                    android:text="@string/videogiochi"
                    android:tag="11"
                    android:textColor="@color/button_categories_text"
                    android:background="#fff"
                    android:onClick="selectedButton"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</ScrollView>



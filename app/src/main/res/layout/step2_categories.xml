<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="6"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_party"
                android:width="120dp"
                android:height="105dp"
                android:text="Musica"
                android:tag="0"
                android:textColor="@color/button_selected_text"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/button_selected_background"
                android:onClick="selectedButton"/>
            <Button
                android:width="120dp"
                android:height="105dp"
                android:text="Viaggi"
                android:tag="1"
                android:textColor="@color/button_selected_text"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@drawable/button_selected_background"
                android:onClick="selectedButton"/>
            <Button
                android:width="120dp"
                android:height="105dp"
                android:text="Natura"
                android:tag="2"
                android:textColor="@color/button_selected_text"
                android:layout_row="2"
                android:layout_column="3"
                android:background="@drawable/button_selected_background"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="105dp"
                android:text="Cibo/bevande"
                android:tag="3"
                android:textColor="@color/button_selected_text"
                android:layout_row="3"
                android:layout_column="1"
                android:background="@drawable/button_selected_background"
                android:onClick="selectedButton"/>
            <Button
                android:width="120dp"
                android:height="105dp"
                android:text="Arte"
                android:tag="4"
                android:textColor="@color/button_selected_text"
                android:layout_row="3"
                android:layout_column="2"
                android:background="@drawable/button_selected_background"
                android:onClick="selectedButton"/>
            <Button
                android:width="120dp"
                android:height="105dp"
                android:text="Marketing"
                android:tag="5"
                android:textColor="@color/button_selected_text"
                android:layout_row="3"
                android:layout_column="3"
                android:background="@drawable/button_selected_background"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="105dp"
                android:text="Sport"
                android:tag="6"
                android:textColor="@color/button_selected_text"
                android:layout_row="4"
                android:layout_column="1"
                android:background="@drawable/button_selected_background"
                android:onClick="selectedButton"/>
            <Button
                android:width="120dp"
                android:height="105dp"
                android:text="Tecnologia"
                android:tag="7"
                android:textColor="@color/button_selected_text"
                android:layout_row="4"
                android:layout_column="2"
                android:background="@drawable/button_selected_background"
                android:onClick="selectedButton"/>
            <Button
                android:width="120dp"
                android:height="105dp"
                android:text="Letteratura"
                android:tag="8"
                android:textColor="@color/button_selected_text"
                android:layout_row="4"
                android:layout_column="3"
                android:background="@drawable/button_selected_background"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="105dp"
                android:text="Moda"
                android:tag="9"
                android:textColor="@color/button_selected_text"
                android:layout_row="5"
                android:layout_column="1"
                android:background="@drawable/button_selected_background"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="105dp"
                android:text="Fotografia"
                android:tag="10"
                android:textColor="@color/button_selected_text"
                android:layout_row="5"
                android:layout_column="2"
                android:background="@drawable/button_selected_background"
                android:onClick="selectedButton"/>

            <Button
                android:width="120dp"
                android:height="105dp"
                android:text="Videogiochi"
                android:tag="11"
                android:textColor="@color/button_selected_text"
                android:layout_row="5"
                android:layout_column="3"
                android:background="@drawable/button_selected_background"
                android:onClick="selectedButton"/>

        </GridLayout>
    </ScrollView>
</FrameLayout>



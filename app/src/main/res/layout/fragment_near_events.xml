<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.eventFragment.AllEventsFragment" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/near_events_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/content_events_list" />

    <ImageView
        android:id="@+id/sad_emoticon3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_sad_emoticon"
        android:layout_gravity="center"
        android:layout_marginTop="-40dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/not_events3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Non sono presenti eventi"
        android:textSize="20dp"
        android:textColor="#999"
        android:layout_gravity="center"
        android:visibility="invisible"/>

</FrameLayout>
